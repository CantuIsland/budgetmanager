<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_income"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context=".activities.IncomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/income_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ToolbarTheme"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/backgroundColor">

            <TextView
                android:id="@+id/income_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:textSize="64sp"
                android:textColor="?attr/textColor"
                tools:gravity="center_horizontal|top"
                tools:text="$0.00" />

            <ImageView
                android:id="@+id/income_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="288dp"
                android:src="@android:color/transparent"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/income_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="?attr/textColor"
                android:layout_marginTop="180dp"
                android:textSize="32sp"
                tools:text="$4545" />

            <!--270-->

            <GridLayout
                android:id="@+id/keypadLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/buttonEnter"
                android:layout_below="@+id/income_divider"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:columnCount="3"
                android:padding="4dp"
                android:rowCount="4"
                android:visibility="invisible">

                <Button
                    android:id="@+id/button1"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/custom_button"
                    android:text="@string/one_string"
                    android:textColor="?attr/textColor"
                    android:textAppearance="@android:style/TextAppearance.Large" />

                <Button
                    android:id="@+id/button2"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/custom_button"
                    android:text="@string/two_string"
                    android:textColor="?attr/textColor"
                    android:textAppearance="@android:style/TextAppearance.Large" />

                <Button
                    android:id="@+id/button3"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/custom_button"
                    android:text="@string/three_string"
                    android:textColor="?attr/textColor"
                    android:textAppearance="@android:style/TextAppearance.Large" />

                <Button
                    android:id="@+id/button4"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/custom_button"
                    android:text="@string/four_string"
                    android:textColor="?attr/textColor"
                    android:textAppearance="@android:style/TextAppearance.Large" />

                <Button
                    android:id="@+id/button5"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/custom_button"
                    android:text="@string/five_string"
                    android:textColor="?attr/textColor"
                    android:textAppearance="@android:style/TextAppearance.Large" />

                <Button
                    android:id="@+id/button6"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/custom_button"
                    android:text="@string/six_string"
                    android:textColor="?attr/textColor"
                    android:textAppearance="@android:style/TextAppearance.Large" />

                <Button
                    android:id="@+id/button7"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/custom_button"
                    android:text="@string/seven_string"
                    android:textColor="?attr/textColor"
                    android:textAppearance="@android:style/TextAppearance.Large" />

                <Button
                    android:id="@+id/button8"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/custom_button"
                    android:text="@string/eight_string"
                    android:textColor="?attr/textColor"
                    android:textAppearance="@android:style/TextAppearance.Large" />

                <Button
                    android:id="@+id/button9"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/custom_button"
                    android:text="@string/nine_string"
                    android:textColor="?attr/textColor"
                    android:textAppearance="@android:style/TextAppearance.Large" />

                <Button
                    android:id="@+id/buttonDecimal"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/custom_button"
                    android:text="@string/decimal_string"
                    android:textColor="?attr/textColor"
                    android:textAppearance="@android:style/TextAppearance.Large" />

                <Button
                    android:id="@+id/button0"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/custom_button"
                    android:text="@string/zero_string"
                    android:textColor="?attr/textColor"
                    android:textAppearance="@android:style/TextAppearance.Large" />

                <ImageButton
                    android:id="@+id/buttonDelete"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/custom_button"
                    android:src="@drawable/delete_button"
                    android:tint="?attr/textColor"
                    android:textAppearance="@android:style/TextAppearance.Large" />

            </GridLayout>

            <Button
                android:id="@+id/buttonEnter"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="32dp"
                android:background="@drawable/custom_button"
                android:text="@string/enter_string"
                android:textColor="?attr/textColor"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:visibility="gone" />


        </RelativeLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_add_floating" />

</android.support.design.widget.CoordinatorLayout>
